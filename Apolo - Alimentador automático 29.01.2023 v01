//Apolo - Alimentador autom√°tico

#include <Servo.h> // servo library
#define SERVO 6 // digital input 6 PWM
Servo servo; // servo variable
int pos; // servo position
int fd_ct = 0; // feed count
int fd_tm = 0; // feed time
int fd_fq = 1 * 60; // time frequency of feed (min)

void setup ()
{
  pinMode(11, OUTPUT); // buzzer + output, - input GND
  servo.attach(SERVO);
  Serial.begin(9600);
  Serial.println("Begin program...");
  delay(2000);
  servo.write(0); // servo zero position
  Serial.println("Feed routines..."); // first feed rountine
  for (int i = 0; i < 6; i++) {
    tone(11, 600, 400);
    delay (1000);
  }
  for (pos = 0; pos < 180; pos++)
  {
    servo.write(pos);
    delay(4);
  }
  delay(4000);
  for (pos = 180; pos >= 0; pos--)
  {
    servo.write(pos);
    delay(4);
  }
  servo.write(0);
  fd_tm = 0;
  fd_ct++;
}

void loop()
{
  fd_tm++;
  Serial.print("Timer (s): ");
  Serial.print(fd_tm);
  Serial.print("/ Count: ");
  Serial.println(fd_ct);
  delay(1000);
  if (fd_tm >= (fd_fq * 60)) {
    Serial.println("Feed routines..."); // feed rountine
    for (int i = 0; i < 6; i++) {
      tone(11, 600, 400);
      delay (1000);
    }
    for (pos = 0; pos < 180; pos++)
    {
      servo.write(pos);
      delay(4);
    }
    delay(4000);
    for (pos = 180; pos >= 0; pos--)
    {
      servo.write(pos);
      delay(4);
    }
    servo.write(0);
    fd_tm = 0;
    fd_ct++;
  }
}
